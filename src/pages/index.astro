---
import Layout from "../layouts/Layout.astro";
import Book from "../components/Book.astro";
---

<Layout title="Bokcirkeln">
    <main class="flex flex-col items-center">
        <header class="flex flex-row justify-center">
            <h1 class="text-5xl p-6 underline">Bokcirkeln</h1>
        </header>
        <div class="flex flex-col items-center w-2/3">
            <Book
                img_src="/bnw.webp"
                book_title="Brave New World"
                author="Aldous Huxley"
                final_score="8/10"
            />
            <Book

                img_src="/katter.webp"
                book_title="If Cats Disappeared from the World"
                author="Genki Kawamura"
                final_score="8/10"
            />
            <Book
                img_src="/julstamning.webp"
                book_title="Julstämning på Lyckans Gård"
                author="Carole Matthew"
                final_score="5/10"
            />
            <Book
                img_src="/tress.webp"
                book_title="Tress of the Emerald Sea"
                author="Brandon Sanderson"
                final_score="8/10"
            />
        </div>
    </main>
</Layout>
